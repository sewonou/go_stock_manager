{{ form_start(form) }}
<div class="row mg-b-25">
    <div class="col-lg-6">{{ form_row(form.username) }}</div>
    <div class="col-lg-6">{{ form_row(form.userRole) }}</div>
    <div class="col-lg-6">{{ form_row(form.password) }}</div>
    <div class="col-lg-6">{{ form_row(form.confirmPassword) }}</div>
</div>

<div class="row mg-b-25">
    <div class="col-lg-8">
        <div class="row">
            <div class="col-lg-12">{{ form_row(form.fullName) }}</div>
            <div class="col-lg-12">{{ form_row(form.imageFile) }}</div>
            <div class="col-lg-6">{{ form_row(form.address) }}</div>
            <div class="col-lg-6">{{ form_row(form.phone) }}</div>
            <div class="col-lg-12">{{ form_row(form.description) }}</div>
        </div>
    </div>
    <div class="col-lg-4">
        <img src="{% if user.imageName is not null %}{{ vich_uploader_asset(user) }}{% else %}{{ asset('assets/img/img0.jpg') }}{% endif %}" class="img-fluid rounded" alt="{{ user.fullName }}" id="selectedImage">
    </div>
</div>
<div class="form-layout-footer">
    <button class="btn btn-primary bd-0" type="submit">Valider</button>
    <button class="btn btn-secondary bd-0" type="reset">Annuler</button>
</div><!-- form-layout-footer -->
{{ form_end(form) }}
