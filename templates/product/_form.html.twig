{{ form_start(form) }}
<div class="row mg-b-25">
    <div class="col-lg-6">{{ form_row(form.category) }}</div>
    <div class="col-lg-6">{{ form_row(form.name) }}</div>
    <div class="col-lg-12">{{ form_row(form.brandName) }}</div>

</div>
<div class="row mg-b-25">
    <div class="col-lg-8">
        <div class="row">
            <div class="col-lg-12">{{ form_row(form.imageFile) }}</div>
            <div class="col-lg-6">{{ form_row(form.unit) }}</div>
            <div class="col-lg-6">{{ form_row(form.salePrice) }}</div>
            <div class="col-lg-6">{{ form_row(form.initQte) }}</div>
            <div class="col-lg-6">{{ form_row(form.minQte) }}</div>
            <div class="col-lg-12">{{ form_row(form.description) }}</div>
            <div class="col-lg-12">{{ form_row(form.codeBar) }}</div>
        </div>
    </div>
    <div class="col-lg-4">
        <img src="{% if product.imageName is not null %}{{ vich_uploader_asset(product) }}{% else %}{{ asset('assets/img/img0.jpg') }}{% endif %}" class="img-fluid rounded mt-5" alt="{{ product.fullName }}" id="selectedImage">
    </div>
</div>
<div class="form-layout-footer">
    <button class="btn btn-primary bd-0" type="submit">Valider</button>
    <button class="btn btn-secondary bd-0" type="reset">Annuler</button>
</div><!-- form-layout-footer -->
{{ form_end(form) }}
